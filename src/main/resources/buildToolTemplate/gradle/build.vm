apply plugin: 'java'

sourceSets {
    main {
        java {
            srcDirs = ['src']
}
    resources {
        srcDirs = ['resources']
        }
    }
}

repositories {
    mavenCentral()
}

dependencies {
    compile 'org.zaproxy:zap:2.6.0'
    testCompile 'junit:junit:4.12'
}

task wrapper(type: Wrapper) {
    gradleVersion = '3.3'
}